<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">
          <TextView
              android:id="@+id/resultado"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:paddingEnd="18sp"
              android:text="8.0"
              android:textSize="32sp"
              android:textStyle="bold"/>

          <TextView
              android:id="@+id/operacao"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:paddingTop="50sp"
              android:paddingEnd="18sp"
              android:text="1+1"
              android:textSize="32sp"
              android:textStyle="bold"/>
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/ac"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="AC"
                    android:textStyle="bold"
                    android:onClick="ac"/>

                <Button
                    android:id="@+id/maisMenos"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="+/-"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/porcentagem"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="%"
                    android:textStyle="bold"
                    android:onClick="porcentagem"/>

                <Button
                    android:id="@+id/divisao"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="/"
                    android:textStyle="bold"
                    android:onClick="operador"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/sete"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="7"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/oito"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="8"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/nove"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="9"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/multiplicacao"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="x"
                    android:textStyle="bold"
                    android:onClick="operador"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/quatro"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="4"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/cinco"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="5"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/seis"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="6"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/subtracao"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="-"
                    android:textStyle="bold"
                    android:onClick="operador"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/um"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"

                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="1"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/dois"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="2"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/tres"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="3"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/soma"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="+"
                    android:textStyle="bold"
                    android:onClick="operador"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/zero"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:onClick="numero"/>

                <Button
                    android:id="@+id/ponto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="."
                    android:textStyle="bold"
                    android:onClick="ponto"/>

                <Button
                    android:id="@+id/igual"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background"
                    android:padding="0dp"
                    android:text="="
                    android:textStyle="bold"
                    android:onClick="igual"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
