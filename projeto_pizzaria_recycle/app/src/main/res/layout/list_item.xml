<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ImgView_pizza"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="28dp">

        <TextView
            android:id="@+id/txtNome_pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:" />

        <TextView
            android:id="@+id/txtIngredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNome_pizza"
            android:layout_marginTop="20dp"
            android:text="Ingredientes:" />

        <TextView
            android:id="@+id/txtValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIngredientes"
            android:layout_marginTop="20dp"
            android:text="Valor:" />


        <Button
            android:id="@+id/btnSolicitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtValor"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#007bff"
            android:text="Solicitar"
            android:onClick="solicitar"/>
    </RelativeLayout>



</LinearLayout>